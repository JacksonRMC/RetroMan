{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@retroman/src/*": ["./src/*"],
      "@pacman/*": ["../pacman-react/src/*"],
      "@GamePage": ["../pacman-react/src/pages/GamePage/GamePage.tsx"]
    },
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
